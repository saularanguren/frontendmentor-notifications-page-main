---
const { src , alt, name, time, message } = Astro.props;
---

<section class="w-[21.4375rem] h-[13.9375rem] flex flex-col justify-start items-start px-3 py-4 rounded-lg gap-[0.625rem]">
    <article class="w-[19.6875rem] h-[11.9375rem] flex justify-start items-start gap-[0.8125rem]">

        <picture class="w-[2.4375rem] h-[2.4375rem] flex justify-start items-center gap-[0.625rem]">
            <img src={src} alt={alt} class="w-full h-full">
        </picture>
    
        <div class="w-[16.4375rem] h-[11.9375rem] flex flex-col justify-start items-start gap-2">
            <div class="w-[15.25rem] h-[2.25rem] flex items-center justify-start flex-wrap">
                <h2 class="w-[7.5625rem] h-[1.125rem] font-PlusJakartaSansExtraBold text-[0.875rem] text-left text-VeryDarkGreyBlue duration-700 cursor-pointer hover:text-Blue">{name}</h2>
                <p class="w-[7.3125rem] h-[1.125rem] font-PlusJakartaSansMedium text-[0.875rem] text-left text-DarkGreyBlue ml-[0.375rem]">sent you a private</p>
                <p class="w-[3.875rem] h-[1.125rem] font-PlusJakartaSansMedium text-[0.875rem] text-left text-DarkGreyBlue">message</p>
            </div>

            <p class="w-[4.5625] h-[1.125rem] text-[0.875rem] text-left font-PlusJakartaSansMedium text-GreyBlue">{time}</p>

            <div class="w-[16.4375rem] h-[7.625rem] flex items-center justify-start gap-[0.625rem] p-4 rounded-[0.3125rem] border-[0.0625rem] border-solid cursor-pointer duration-700 hover:bg-LightGreyBlue border-VeryLightGreyBlue">
                <p class="w-[14.4375rem] h-[5.625rem] font-PlusJakartaSansMedium text-left text-[0.875rem] text-DarkGreyBlue">{message}</p>
            </div>
        </div>
    
    </article>
</section>