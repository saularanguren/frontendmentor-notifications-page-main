---
const { srcUser, srcPicture, altUser, altPicture, name, time } = Astro.props;
---

<section class="w-[21.4375rem] h-[5.5625rem] flex flex-col justify-start items-start px-3 py-4 rounded-lg gap-[0.625rem]">
    <article class="w-[19.6875rem] h-[3.5625rem] flex flex-col justify-start items-start">

        <picture class="absolute w-[19.6875rem] h-[2.4375rem] flex justify-start items-center gap-[14.8125rem]">
            <img src={srcUser} alt={altUser} class="w-[2.4375rem] h-[2.4375rem]">
            <img src={srcPicture} alt={altPicture} class="w-[2.4375rem] h-[2.4375rem] cursor-pointer">
        </picture>
    
        <div class="relative ml-[3.25rem] w-[12.3125rem] h-[3.5625rem] flex flex-col items-start justify-start gap-[0.1875rem]">
            <div class="w-[12.3125rem] h-[2.25rem] flex flex-wrap items-center justify-start">
                <h2 class="w-[6.5625rem] h-[1.125rem] text-[0.875rem] font-PlusJakartaSansExtraBold text-VeryDarkGreyBlue text-left duration-700 cursor-pointer hover:text-Blue">{name}</h2>
                <p class="w-[5.25rem] h-[1.125rem] text-[0.875rem] font-PlusJakartaSansMedium text-DarkGreyBlue text-left ml-[0.375rem]">commented</p>
                <p class="w-[6.3125rem] h-[1.125rem] text-[0.875rem] font-PlusJakartaSansMedium text-DarkGreyBlue text-left">on your picture</p>
            </div>

            <p class="w-[4.625rem] h-[1.125rem] text-[0.875rem] font-PlusJakartaSansMedium text-GreyBlue text-left">{time}</p>
        </div>
    
    </article>
</section>