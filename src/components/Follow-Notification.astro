---
const { src , alt, name, time } = Astro.props;
---

<section class="w-[21.4375rem] h-[4.4375rem] gap-[0.625rem] flex flex-col items-start justify-start px-4 py-[0.875rem] rounded-lg bg-Snow">
    <article class="w-[15.25rem] h-[2.4375rem] flex items-center justify-start gap-[0.8125rem]">

        <picture class="w-[2.4375rem] h-[2.4375rem] gap-[0.625rem] flex items-center justify-start">
            <img src={src} alt={alt} class="w-full h-full">
        </picture>
    
        <div class="w-auto h-[2.4375rem] flex flex-col items-start justify-start gap-[0.1875rem]">
            <div class="w-full h-[1.125rem] flex items-center justify-start">
                <h2 class="w-[5.25rem] h-[1.125rem] mr-[0.4375rem] font-PlusJakartaSansExtraBold text-[0.875rem] text-VeryDarkGreyBlue text-left duration-700 cursor-pointer hover:text-Blue">{name}</h2>
                <p class="w-[5.4375rem] h-[1.125rem] mr-[0.4375rem] font-PlusJakartaSansMedium text-[0.875rem] text-DarkGreyBlue text-left">followed you</p>
                <div class="circle w-2 h-2 rounded-[100%] bg-Red"></div>
            </div>

            <p class="w-48 h-[1.125rem] font-PlusJakartaSansMedium text-[0.875rem] text-left text-GreyBlue">{time}</p>
        </div>
    
    </article>
</section>