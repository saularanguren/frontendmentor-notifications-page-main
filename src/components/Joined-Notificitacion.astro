---
const { src , alt, nameUser, nameGroup, time } = Astro.props;
---

<section class="w-[21.4375rem] h-[5.5625rem] flex flex-col gap-[0.625rem] items-start justify-start px-4 py-4 rounded-lg bg-Snow">
    <article class="w-[17.125rem] h-[3.5625rem] flex items-start justify-start gap-[0.8125rem]">

        <picture class="w-[2.4375rem] h-[2.4375rem] flex items-center justify-start gap-[0.625rem]">
            <img src={src} alt={alt} class="w-full h-full">
        </picture>
    
        <div class="w-[13.875rem] h-[3.5625rem] flex flex-col items-start justify-start gap-[0.1875rem]">
            <div class="w-[13.875rem] h-[2.25rem] flex flex-wrap items-center justify-start">
                <h2 class="w-[7.25rem] h-[1.125rem] font-PlusJakartaSansExtraBold text-VeryDarkGreyBlue text-[0.875rem] duration-700 cursor-pointer hover:text-Blue">{nameUser}</h2>
                <p class="w-[6.25rem] h-[1.125rem] font-PlusJakartaSansMedium text-DarkGreyBlue text-[0.875rem] ml-[0.375rem]">has joined your</p>
                <p class="w-11 h-[1.125rem] font-PlusJakartaSansMedium text-DarkGreyBlue text-[0.875rem]">group</p>
                <p class="w-[4.8125rem] h-[1.125rem] font-PlusJakartaSansVariableWght font-bold text-[0.875rem] text-Blue ml-[0.375rem]">{nameGroup}</p>
                <div class="circle w-2 h-2 rounded-[100%] bg-Red ml-[0.375rem]"></div>
            </div>

            <p class="w-[13.875rem] h-[3.5625rem] font-PlusJakartaSansMedium text-[0.875rem] text-GreyBlue text-left">{time}</p>
        </div>
        
    </article>
</section>