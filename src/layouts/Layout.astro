---
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" translate="no">
	<head>
		<!-- ============================= metas ============================= -->
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<!-- ============================= links ============================= -->
		<link rel="icon" type="image/png" href="/favicon-32x32.png" />
		<!-- ============================= title ============================= -->
		<title>{title}</title>
	</head>
	<body class="flex items-center justify-center min-h-screen sm:bg-Snow">
		<slot />
	</body>
</html>

<style is:global>
	@tailwind base;

	@layer base {
		* {
			@apply m-0 p-0 box-border;
		}

		@font-face {
			font-family: "PlusJakartaSans-VariableWght";
			src: url(../assets/fonts/PlusJakartaSans-VariableFont_wght.ttf);
		}

		@font-face {
			font-family: "PlusJakartaSans-Medium";
			src: url(../assets/fonts/static/PlusJakartaSans-Medium.ttf);
		}

		@font-face {
			font-family: "PlusJakartaSans-ExtraBold";
			src: url(../assets/fonts/static/PlusJakartaSans-ExtraBold.ttf);
		}
	}

	@tailwind components;
	@tailwind utilities;
</style>